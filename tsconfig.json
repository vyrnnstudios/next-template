{
  "compilerOptions": {
    "module": "CommonJS",

    "moduleResolution": "node",

    "jsx": "preserve",

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "baseUrl": "src",

    "paths": {
      "@vyrnn/next-template/*": [ "*" ]
    },

    "plugins": [
      {
        "name": "next"
      }
    ],

    "noEmit": true,
    "strict": false,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
  ]
}
